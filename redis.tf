resource "aws_elasticache_cluster" "mastodon_redis" {
  cluster_id           = "mastodon-redis"
  engine               = "redis"
  node_type            = "cache.m4.large"
  num_cache_nodes      = 1
  parameter_group_name = "default.redis3.2"
  engine_version       = "3.2.10"
  port                 = 6379
}